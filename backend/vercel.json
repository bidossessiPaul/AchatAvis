{
    "version": 2,
    "builds": [
        {
            "src": "src/app.ts",
            "use": "@vercel/node"
        },
        {
            "src": "api/*.ts",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/debug",
            "destination": "api/debug.ts"
        },
        {
            "source": "/(api|health|public)/(.*)",
            "destination": "src/app.ts"
        },
        {
            "source": "/",
            "destination": "src/app.ts"
        }
    ]
}